{
  "typedocOptions": {
    "out": "docs",
    "name": "Component Catalog Documentation",
    "theme": "default",
    "sort": ["source-order"],
    "hideGenerator": true
  },
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": "./src",
    "outDir": "./dist/node",
    "noEmit": true,
    "downlevelIteration": true,
    "sourceMap": false
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
